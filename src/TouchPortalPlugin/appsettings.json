{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args":  {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/vJoyTouchPortalPlugin.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u3}] {SourceContext} {NewLine}      {Message:lj} {NewLine}{Exception}"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "TouchPortalSDK": "Warning",
        "TJoy": "Information"
      }
    }
  },
  "TouchPortalOptions": {
    "IpAddress": "127.0.0.1",
    "Port": 12136
  }
}
